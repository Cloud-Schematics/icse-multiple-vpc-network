##############################################################################
# VPC ID
##############################################################################

output "vpc_id" {
  description = "ID of VPC"
  value       = ibm_is_vpc.vpc.id
}

##############################################################################

##############################################################################
# VPC CRN
##############################################################################

output "vpc_crn" {
  description = "CRN of VPC"
  value       = ibm_is_vpc.vpc.crn
}

##############################################################################

##############################################################################
# VPC Name
##############################################################################

output "vpc_name" {
  description = "Name of the VPC"
  value       = ibm_is_vpc.vpc.name
}

##############################################################################

##############################################################################
# VPC Resource Group ID
##############################################################################

output "vpc_resource_group_id" {
  description = "ID of resource group where VPC resource are created."
  value       = var.resource_group_id
}

##############################################################################

##############################################################################
# Network ACLs
##############################################################################

output "network_acls" {
  description = "List of Network ACL names and ids"
  value       = module.network_acls.acls
}

##############################################################################

##############################################################################
# Public Gateways
##############################################################################

output "public_gateways" {
  description = "Map of public gateways by zone."
  value       = module.public_gateways.gateways
}

##############################################################################

##############################################################################
# Subnet Zone List
##############################################################################

output "subnet_zone_list" {
  description = "List of subnets in this VPC including name, id, CIDR block, and zone."
  value       = module.subnets.subnet_zone_list
}

##############################################################################

##############################################################################
# Security Groups
##############################################################################

output "security_groups" {
  description = "List of security group names and ids"
  value       = module.security_groups.groups
}

##############################################################################

##############################################################################
# VPN Gateway
##############################################################################

output "vpn_gateway" {
  description = "VPN Gateway information"
  value       = module.vpn_gateway.vpn_gateway
}

##############################################################################

##############################################################################
# Transit Gateway Outputs
##############################################################################

output transit_gateway_id {
  description = "ID of the transit gateway instance."
  value       = var.enable_transit_gateway == true ? ibm_tg_gateway.transit_gateway[0].id : null
}

